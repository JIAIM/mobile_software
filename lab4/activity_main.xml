<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/ik_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Струм КЗ (кА)"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/sk_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Потужність станції (МВА)"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/ukmax_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ukmax (%)"
            android:inputType="numberDecimal" />

        <Button
            android:id="@+id/calculate_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Розрахувати" />

        <TextView
            android:id="@+id/result_output"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:text="Результати" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>